{
  "output": {
    "filePath": "repomix-output.md",
    "style": "markdown",
    "parsableStyle": false,
    "compress": false,
    "headerText": "Render Signal",
    "fileSummary": true,
    "directoryStructure": true,
    "files": true,
    "removeComments": false,
    "removeEmptyLines": false,
    "topFilesLength": 10,
    "showLineNumbers": true,
    "includeEmptyDirectories": false,
    "truncateBase64": true
  },
  "include": [
    "app_render.py",
    "app_logging/**",
    "auth/**",
    "background/**",
    "config/**",
    "deduplication/**",
    "email_processing/**",
    "routes/**",
    "services/**",
    "static/**",
    "utils/**",
    "scripts/**",
    "deployment/**",
    "preferences/**",
    "make/**",
    "dashboard.html",
    "login.html",
    "requirements*.txt",
    "Dockerfile"
  ],
  "ignore": {
    "customPatterns": [
      "docs/**",
      "tests/**",
      "memory-bank/**",
      ".github/**",
      ".idea/**",
      ".venv/**",
      "htmlcov/**",
      "__pycache__/**",
      "*.log",
      "repomix-output.*"
    ]
  }
}
